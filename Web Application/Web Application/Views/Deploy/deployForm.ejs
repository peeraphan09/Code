<%- include("../_header"); -%>
<body class="body">
    <div class="container mt-5">
        <h3 class="text-center" style="color: black;">Add Deployment</h3>
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <form action="/deploy/add" method="post">
                    <div class="form-group">
                        <label for="device">Device</label>
                        <select class="form-control" name="did09"> <!-- แก้ชื่อตรงนี้ -->
                            <option value="">Choose Device</option>
                            <% if (device09) { %>
                                <% for (var i = 0; i < device09.length; i++) { %>
                                    <option value="<%= device09[i].did %>"><%= device09[i].Name %></option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="site">Site</label>
                        <select class="form-control" name="sid09"> <!-- แก้ชื่อตรงนี้ -->
                            <option value="">Choose Site</option>
                            <% if (site09) { %>
                                <% for (var i = 0; i < site09.length; i++) { %>
                                    <option value="<%= site09[i].sid %>"><%= site09[i].Name %></option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="install">Edit Installation Date</label>
                        <input type="text" name="install" id="install" placeholder="YYYY-MM-DD"  class="form-control">
                    </div>
                    
                    <script>
                        $(function() {
                            // เลือก input field ที่มี id เป็น 'install' และใช้ jQuery UI Datepicker
                            $('#install').datepicker({
                                dateFormat: 'yy-mm-dd' // รูปแบบวันที่ที่ต้องการ (YYYY-MM-DD)
                            });
                        });
                    </script>
                    
                    <div class="form-group">
                        <label for="comment">Comment</label>
                        <input type="text" name="comment" placeholder="Comment" class="form-control">
                    </div> 
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save Deployment</button>
                    </div>
                </form>
                <a href="/deploy" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</body>
<%- include("../_footer"); -%>