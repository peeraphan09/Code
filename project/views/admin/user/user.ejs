<%- include('../../_header'); -%>

<style>
/* ตาราง */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

th, td {
    padding: 12px;
    border: 1px solid #ddd;
    text-align: left;
}

th {
    background-color: #153f69;
    color: white;
}

tr:hover {
    background-color: #f1f1f1;
}

/* ปุ่มแก้ไขและลบ */
.btn-edit {
    background-color: #2196F3;
    color: white;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-right: 5px;
}

.btn-edit:hover {
    background-color: #1976D2;
}

.btn-delete {
    background-color: #f44336;
    color: white;
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.btn-delete:hover {
    background-color: #c62828;
}

/* Role badge */
.role-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.9em;
    font-weight: bold;
    display: inline-block;
}

.role-admin {
    background-color: #e67e22;
    color: white;
}

.role-user {
    background-color: #2ecc71;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    table, th, td {
        font-size: 14px;
    }
    .btn-edit, .btn-delete {
        padding: 4px 8px;
        font-size: 0.85em;
    }
}
</style>

<div class="main-content">
    <h2>รายชื่อผู้เข้าพัก</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>ชื่อเต็ม</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>จัดการ</th>
            </tr>
        </thead>
        <tbody>
        <% users.forEach((user, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= user.full_name %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td>
                    <span class="role-badge <%= user.role === 'admin' ? 'role-admin' : 'role-user' %>">
                        <%= user.role %>
                    </span>
                </td>
                <td>
                    <a href="/admin/user/edit/<%= user.id %>">
                        <button class="btn-edit">แก้ไข</button>
                    </a>
                    <a href="/admin/user/delete/<%= user.id %>" onclick="return confirm('คุณแน่ใจว่าจะลบผู้ใช้นี้?');">
                        <button class="btn-delete">ลบ</button>
                    </a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<%- include('../../_footer'); -%>
