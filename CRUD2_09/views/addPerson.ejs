<h1 align="center">Person add</h1>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-12 d-flex justify-content-center">
            <form action="/person/add" method="post" class="w-50">
                <div class="form-group">
                    <label for="name">ชื่อ</label>
                    <input type="text" name="name" placeholder="ชื่อ" class="form-control">
                </div>
                <br>
                <div class="form-group">
                    <label for="mobile">โทรศัพท์</label>
                    <input type="text" name="mobile" placeholder="โทรศัพท์" class="form-control">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">บันทึก</button>
                <a href="/person/list" class="btn btn-primary">ย้อนกลับ</a>
            </form>
        </div>
    </div>
</div>

