<%- include("../_header"); -%>
<body class="body">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <br>
                <h3 class="text-center">Edit</h3>
                <form action="/peeraphan/update/<%= data1&& data1[0] ? data1[0].peeid : '' %>" method="post" class="w-50">
                    <div class="form-group">
                        <label for="boonpun">boonpun</label>
                        <select class="form-control" id="id" name="boonpun">
                            <option value="">กรุณาเลือก</option>
                            <% if (data2) { %>
                                <% for (var i = 0; i < data2.length; i++) { %>
                                    <option value="<%= data2[i].id %>" <% if(data1 && data1[0] && data2[i].boonpun == data1[0].did09) { %>selected<% } %> ><%= data2[i].name09 %></option>
                                <% } %>
                            <% } %>
                        </select>
                    </div> 
                    <br>
                    <div class="form-group">
                        <label for="mirot09"> Mirot </label>
                        <input type="text" id="mirot" name="mirot09" placeholder="mirot" value="<%= data1 && data1[0] ? data1[0].mirot09 : '' %>" class="form-control">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/peeraphan" class="btn btn-danger">Back</a>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include("../_footer"); -%>