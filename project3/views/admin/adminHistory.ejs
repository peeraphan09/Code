<%- include("../_header"); -%>
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <title>ประวัติการยืม-คืน</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
        }

        table {
            width: 90%;
            margin: auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .returned {
            color: green;
            font-weight: bold;
        }

        .date-note {
            text-align: center;
            margin-top: 20px;
            font-style: italic;
        }

        /* Sidebar */
        #sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            color: white;
            padding: 20px;
            z-index: 1001;
            transition: left 0.3s ease;
        }

        #sidebar h2 {
            color: white;
        }

        #sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            margin: 10px 0;
        }

        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1000;
            display: none;
        }

        .open-sidebar-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1100;
            background: #007BFF;
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 4px;
        }
    </style>
</head>
<body>


    <!-- Sidebar -->
    <div id="sidebar">
        <h2>เมนู</h2>
        <a href="/">หน้าแรก</a>
        <a href="/borrow">ยืมอุปกรณ์</a>
        <a href="/history">ประวัติ</a>
    </div>

    <!-- Overlay -->
    <div id="overlay" onclick="closeSidebar()"></div>

    <!-- เนื้อหา -->
    <h1>ประวัติการยืม-คืนอุปกรณ์</h1>
    <% if (historyRecords.length > 0) { %>
    <table id="historyTable">
        <thead>
            <tr>
                <th>ชื่อผู้ใช้</th>
                <th>อุปกรณ์</th>
                <th>จำนวน</th>
                <th>วันที่ยืม</th>
                <th>วันที่คืน</th>
                <th>สถานะ</th>
            </tr>
        </thead>
        <tbody>
            <% historyRecords.forEach(record => { 
                const borrowedDate = new Date(new Date(record.date_borrowed).getTime() - 7 * 60 * 60 * 1000);
                const buddhistYearBorrowed = borrowedDate.getFullYear() + 543;
                const thaiBorrowedDate = borrowedDate.toLocaleString('th-TH', {
                    weekday: 'long',
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false
                }).replace(borrowedDate.getFullYear().toString(), buddhistYearBorrowed.toString()) + ' น.';

                let thaiReturnDate = '-';
                if (record.date_returned) {
                    const returnDate = new Date(new Date(record.date_returned).getTime() - 7 * 60 * 60 * 1000);
                    const buddhistYearReturn = returnDate.getFullYear() + 543;
                    thaiReturnDate = returnDate.toLocaleString('th-TH', {
                        weekday: 'long',
                        day: 'numeric',
                        month: 'long',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        hour12: false
                    }).replace(returnDate.getFullYear().toString(), buddhistYearReturn.toString()) + ' น.';
                }

                let statusText = '';
                if (record.status === 'returned') {
                    statusText = 'คืนแล้ว';
                } else if (record.status === 'borrowed') {
                    statusText = 'กำลังยืม';
                } else {
                    statusText = record.status;
                }
            %>
                <tr>
                    <td><%= record.first_name %> <%= record.last_name %></td>
                    <td>(<%= record.equipment_code %>) <%= record.equipment_name %></td>
                    <td><%= record.quantity %></td>
                    <td><%= thaiBorrowedDate %></td>
                    <td><%= thaiReturnDate %></td>
                    <td class="<%= record.status === 'returned' ? 'returned' : '' %>"><%= statusText %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <p style="text-align:center;">ไม่มีประวัติการยืมคืน</p>
    <% } %>

    <p class="date-note" id="currentDate"></p>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        // DataTables
        $(document).ready(function () {
            $('#historyTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/th.json'
                },
                pageLength: 10
            });
        });

        // แสดงวันที่ปัจจุบัน
        const now = new Date(new Date().getTime() );
        const buddhistYear = now.getFullYear() + 543;
        const thaiDateTime = now.toLocaleString('th-TH', {
            weekday: 'long',
            day: 'numeric',
            month: 'long',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
            hour12: false
        }).replace(now.getFullYear().toString(), buddhistYear.toString()) + ' น.';
        document.getElementById('currentDate').innerText = `ข้อมูล ณ วันที่ ${thaiDateTime}`;

        // Sidebar functions
        function openSidebar() {
            document.getElementById("sidebar").style.left = "0";
            document.getElementById("overlay").style.display = "block";
        }

        function closeSidebar() {
            document.getElementById("sidebar").style.left = "-250px";
            document.getElementById("overlay").style.display = "none";
        }
    </script>
</body>
</html>
<%- include("../_footer"); -%>
