<h1 align="center">อุปกรณ์</h1>
<div class='container'>
    <div class='row mt-7'>
        <div class='col-md-10 mx-auto'> 
            <table id="datatables" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ลำดับ</th>
                        <th>Name</th>
                        <th>mac</th>
                        <th>model</th>
                        <th>version</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].Name %></td>
                                <td><%= data[i].mac %></td>
                                <td><%= data[i].model %></td>
                                <td><%= data[i].version %></td>
                                <td>
                                    <a href="/Device/edit/<%= data[i].id %>" class="btn btn-info style=width:60px;"><i class="bi bi-pencil-fill"></i>แก้ไข</a>
                                    <a href="/Device/delete/<%= data[i].id %>" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>ลบข้อมูล</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %> 
                </tbody>
            </table>
            <div class="mt-3">
                <a href="/Device/add" class="btn btn-primary">เพิ่มข้อมูลหอ</a>
                <a href="/home" class="btn btn-secondary">ย้อนกลับ</a> 
            </div>
        </div>
    </div>
</div>